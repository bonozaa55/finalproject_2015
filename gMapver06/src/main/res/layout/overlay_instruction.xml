<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPageIndicator"
    android:layout_width="match_parent"
    android:background="#70000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="588.8dp"
        android:layout_height="331.2dp"
        android:background="@drawable/mycraft_item_background2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <com.example.android.location.Interface.PageIndicator
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/instruction_cancel"
            android:src="@drawable/cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>